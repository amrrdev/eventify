# =============================================================================
# EVENTIFY ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure with your actual values
# Never commit .env files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# Local: mongodb://localhost:27017/eventify
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/eventify
DATABASE_URL=mongodb://localhost:27017/eventify

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis server configuration for caching and session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT secret key - MUST be at least 32 characters for security
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters

# JWT issuer and audience for token validation
JWT_ISSUER=eventify
JWT_AUDIENCE=eventify-users

# Token expiration times (in seconds)
JWT_ACCESS_TOKEN_TTL=3600    # 1 hour
JWT_REFRESH_TOKEN_TTL=86400  # 24 hours

# =============================================================================
# EMAIL CONFIGURATION (Gmail)
# =============================================================================
# Gmail configuration for email verification and notifications
# Use App Password, not your regular Gmail password
# Generate at: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-gmail-app-password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV=development

# Server port (default: 3000)
PORT=3000

# CORS origin for frontend applications
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# PERFORMANCE TUNING (Optional)
# =============================================================================
# MongoDB connection pool settings
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10

# Event processing batch configuration
EVENT_BATCH_SIZE=10000
EVENT_FLUSH_INTERVAL=500

# Metrics aggregation settings
METRICS_ACTIVE_WINDOW_MINUTES=5
METRICS_INACTIVE_THRESHOLD_MINUTES=2

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These settings are only used in development mode

# Enable Swagger API documentation
ENABLE_SWAGGER=true

# Enable debug endpoints
ENABLE_DEBUG_ENDPOINTS=true

# Disable email sending in development
DISABLE_EMAIL_SENDING=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# These settings should be configured for production deployments

# Enable production optimizations
ENABLE_COMPRESSION=true

# Security headers
ENABLE_HELMET=true

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# Health check configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Enable application metrics
ENABLE_METRICS=true

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# New Relic license key for APM (optional)
NEW_RELIC_LICENSE_KEY=

# =============================================================================
# CLOUD DEPLOYMENT SPECIFIC
# =============================================================================
# Railway deployment settings
RAILWAY_ENVIRONMENT=

# AWS settings (if using AWS services)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Google Cloud settings (if using GCP services)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_KEY_FILE=